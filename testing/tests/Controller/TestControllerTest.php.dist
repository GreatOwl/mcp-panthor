namespace {{ application.namespace }}\Controller;

use Mockery;
use PHPUnit_Framework_TestCase;
use Slim\Environment;
use Slim\Http\Request;
use {{ application.namespace }}\Testing\TestResponse;

class TestControllerTest extends PHPUnit_Framework_TestCase
{
    public $environment;
    public $request;
    public $response;

    public function setUp()
    {
        $this->environment = Environment::mock();
        $this->request = new Request($this->environment);
        $this->response = new TestResponse;
    }

    public function test()
    {
        $controller = new TestController($this->environment, $this->request, $this->response);
        $controller();

        $expected = <<<DERP
asdsadsd
DERP;
        $this->assertSame($expected, (string) $this->response);
    }
}
