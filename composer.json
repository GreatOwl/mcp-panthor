{
    "name": "ql/panthor",
    "description": "Symfony + Slim = Panthor",
    "license": "proprietary",

    "autoload": {
        "psr-4": { "QL\\Panthor\\": "src" }
    },
    "config": {
        "preferred-install": "dist"
    },
    "repositories": [
        { "type": "composer", "url": "http://composer/" }
    ],
    "require": {
        "php":                          ">=5.5.0",

        "slim/slim":                    "~2.4",

        "symfony/config":               "~2.6",
        "symfony/dependency-injection": "^2.6.3",
        "symfony/yaml":                 "~2.6"
    },
    "require-dev": {
        "mockery/mockery": "*",
        "phpunit/phpunit": "4.*",
        "phpunit/php-invoker": "*",

        "psr/log": "*",

        "ql/http-problem":  "~1.0",
        "ql/mcp-crypto":    "~2.0",

        "symfony/debug":    "~2.6",

        "twig/twig": "*"
    }
}
