{
    "name": "ql/panthor",
    "description": "A smaller, more nimble microframework skeleton application using Slim",
    "license": "proprietary",

    "autoload": {
        "psr-4": {
            "QL\\Panthor\\": "src"
        }
    },
    "config": {
        "preferred-install": "dist"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0.x-dev"
        }
    },
    "repositories": [
        {
            "type": "composer",
            "url": "http://composer/"
        }
    ],
    "require": {
        "php": ">=5.4.0",
        "slim/slim": ">=2.4",
        "symfony/config": ">=2.5",
        "symfony/dependency-injection": ">=2.5"
    },
    "require-dev": {
        "mockery/mockery": "*",
        "phpunit/phpunit": "4.*",
        "phpunit/php-invoker": "*"
    }
}
