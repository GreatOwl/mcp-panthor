{
    "name": "ql/panthor",
    "description": "Symfony + Slim = Panthor",
    "license": "proprietary",

    "autoload": {
        "psr-4": {
            "QL\\Panthor\\": "src"
        }
    },
    "config": {
        "preferred-install": "dist"
    },
    "repositories": [
        {
            "type": "composer",
            "url": "http://composer/"
        }
    ],
    "require": {
        "php": ">=5.4.0",
        "slim/slim": ">=2.4",
        "symfony/config": ">=2.5",
        "symfony/dependency-injection": ">=2.5",
        "symfony/yaml": ">=2.5"
    },
    "require-dev": {
        "mockery/mockery": "*",
        "phpunit/phpunit": "4.*",
        "phpunit/php-invoker": "*",

        "psr/log": "*",
        "ql/mcp-crypto": "*",
        "ql/mcp-core": "*",
        "twig/twig": "*"
    }
}
