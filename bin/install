#!/usr/bin/env bash

# configure
set -e
set -u

# declare variables
p_HAL_ENVIRONMENT="${HAL_ENVIRONMENT:=}"
p_DIR=$( cd "$( dirname "$0" )" && pwd )
p_STABILITY_FLAG="--no-dev"

# script
if [ -z  "$p_HAL_ENVIRONMENT" ] ; then
    p_STABILITY_FLAG="--dev"
fi

"$p_DIR/composer" install \
--prefer-dist \
$p_STABILITY_FLAG
