#!/usr/bin/env bash

# configure
set -e
set -u

# declare variables
p_HAL_ENVIRONMENT="${HAL_ENVIRONMENT:=}"
p_DIR=$( cd "$( dirname "$0" )" && pwd )

# script
if [ -z  "$p_HAL_ENVIRONMENT" ] ; then
    echo "HAL 9000 environment not found. Nothing to do."
    exit 1
fi

"$p_DIR/install"
"$p_DIR/normalize-configuration"
"$p_DIR/dump-di"
